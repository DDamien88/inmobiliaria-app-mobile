<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#93ACB8"
    tools:context=".ui.Listar.AgregarInmuebleFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/tvTituloAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Inmueble"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" />

        <!-- DIRECCIÓN -->
        <TextView
            android:id="@+id/tvDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvTituloAgregar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etDireccion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ej: Av. Rivadavia 1234"
            android:inputType="textPostalAddress"
            app:layout_constraintStart_toEndOf="@id/tvDireccion"
            app:layout_constraintTop_toTopOf="@id/tvDireccion"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" />

        <!-- AMBIENTES -->
        <TextView
            android:id="@+id/tvAmbientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ambientes:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvDireccion"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etAmbientes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ej: 3"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@id/tvAmbientes"
            app:layout_constraintTop_toTopOf="@id/tvAmbientes"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" />

        <!-- PRECIO -->
        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvAmbientes"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etPrecio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ej: 120000"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@id/tvPrecio"
            app:layout_constraintTop_toTopOf="@id/tvPrecio"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" />

        <!-- USO -->
        <TextView
            android:id="@+id/tvUso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uso:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvPrecio"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etUso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ej: Comercial / Residencial"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@id/tvUso"
            app:layout_constraintTop_toTopOf="@id/tvUso"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" />

        <!-- TIPO -->
        <TextView
            android:id="@+id/tvTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvUso"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etTipo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ej: Casa / Departamento"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@id/tvTipo"
            app:layout_constraintTop_toTopOf="@id/tvTipo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" />

        <!-- NUEVOS CAMPOS -->
        <TextView
            android:id="@+id/tvSuperficie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Superficie (m²):"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvTipo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etSuperficie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ej: 85"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@id/tvSuperficie"
            app:layout_constraintTop_toTopOf="@id/tvSuperficie"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tvLatitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitud:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvSuperficie"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etLatitud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ej: -34.6037"
            android:inputType="numberDecimal|numberSigned"
            app:layout_constraintStart_toEndOf="@id/tvLatitud"
            app:layout_constraintTop_toTopOf="@id/tvLatitud"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tvLongitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitud:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvLatitud"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etLongitud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ej: -58.3816"
            android:inputType="numberDecimal|numberSigned"
            app:layout_constraintStart_toEndOf="@id/tvLongitud"
            app:layout_constraintTop_toTopOf="@id/tvLongitud"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" />

        <!-- DISPONIBLE -->
        <CheckBox
            android:id="@+id/cbDisponible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disponible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLongitud"
            android:layout_marginTop="16dp" />

        <!-- IMAGEN -->
        <ImageView
            android:id="@+id/ivInmueble"
            android:layout_width="161dp"
            android:layout_height="114dp"
            android:layout_marginTop="24dp"
            android:background="#E0E0E0"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cbDisponible"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/btnSeleccionarImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Imagen"
            app:layout_constraintTop_toBottomOf="@id/ivInmueble"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- GUARDAR -->
        <Button
            android:id="@+id/btnGuardarInmueble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Inmueble"
            android:textAllCaps="false"
            android:enabled="false"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/btnSeleccionarImagen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
