<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#93ACB8"
    tools:context=".ui.Listar.DetalleInmuebleFragment">


    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Información del inmueble"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/tvCodigoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:text="Código:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etCodigo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:enabled="false"
        app:layout_constraintBaseline_toBaselineOf="@id/tvCodigoLabel"
        app:layout_constraintStart_toEndOf="@id/tvCodigoLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />


    <TextView
        android:id="@+id/tvAmbientesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:text="Ambientes:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvCodigoLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etAmbientes"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:enabled="false"
        app:layout_constraintBaseline_toBaselineOf="@id/tvAmbientesLabel"
        app:layout_constraintStart_toEndOf="@id/tvAmbientesLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />


    <TextView
        android:id="@+id/tvDireccionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:text="Dirección:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvAmbientesLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etDireccion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:enabled="false"
        app:layout_constraintBaseline_toBaselineOf="@id/tvDireccionLabel"
        app:layout_constraintStart_toEndOf="@id/tvDireccionLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />


    <TextView
        android:id="@+id/tvPrecioLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:text="Precio:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvDireccionLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etPrecio"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:enabled="false"
        app:layout_constraintBaseline_toBaselineOf="@id/tvPrecioLabel"
        app:layout_constraintStart_toEndOf="@id/tvPrecioLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />


    <TextView
        android:id="@+id/tvUsoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:text="Uso:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvPrecioLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etUso"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:enabled="false"
        app:layout_constraintBaseline_toBaselineOf="@id/tvUsoLabel"
        app:layout_constraintStart_toEndOf="@id/tvUsoLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />


    <TextView
        android:id="@+id/tvTipoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:text="Tipo:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvUsoLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etTipo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:enabled="false"
        app:layout_constraintBaseline_toBaselineOf="@id/tvTipoLabel"
        app:layout_constraintStart_toEndOf="@id/tvTipoLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />


    <CheckBox
        android:id="@+id/cbDisponible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disponible"
        android:checked="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTipoLabel"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/ivInmueble"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cbDisponible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Guardar disponibilidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivInmueble" />

</androidx.constraintlayout.widget.ConstraintLayout>
